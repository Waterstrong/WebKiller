<Window x:Class="CursorAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="127" Width="76" Topmost="True" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" MouseEnter="Window_MouseEnter" WindowStyle="None" AllowsTransparency="true">
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
    <Canvas Name="cas"  Width="76" HorizontalAlignment="Right" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" VerticalAlignment="Stretch" Background="#7BE7D9E8">
        <Button Canvas.Left="4" Canvas.Top="99" Content="退出程序" Height="23" Name="btn_exit" Width="70" Click="btn_exit_Click" />
        <Button Canvas.Left="4" Canvas.Top="30" Content="开始点击" Height="23" Name="btn_click" Width="70" Click="btn_click_Click" />
        <Label Canvas.Left="29" Canvas.Top="-8" Content="↑" Height="37" Name="label_arrow" IsEnabled="False" FontSize="20" FontWeight="Bold" Width="19" />
    </Canvas>
</Window>
